{% extends 'base.html.twig' %}

{% block title %}Clients index{% endblock %}

{% block body %}

    <h1 style="padding-top:10rem; text-align:center; background-color:#2F3138; margin-top:0; color:white ;padding-bottom:2%" >Clients index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Ref</th>
                <th>Name_Society</th>
                <th>Type_Activite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.NameSociety }}</td>
                <td>{{ client.TypeActivite }}</td>
                <td>
                    <a href="{{ path('clients_show', {'id': client.id}) }}">show</a>
                    <a href="{{ path('clients_edit', {'id': client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('clients_new') }}">Create new</a>
{% endblock %}
